---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';
import { marked } from 'marked';

const { slug } = Astro.params;
const db = Astro.locals.runtime.env.DB;

// DB에서 해당 슬러그의 글 가져오기
const post = await db.prepare("SELECT * FROM posts WHERE slug = ?").bind(slug).first();

if (!post) {
	return Astro.redirect('/404');
}

const htmlContent = marked.parse(post.content);
const displayDate = post.created_at ? post.created_at.split(' ')[0].replace(/-/g, '. ') : '';
---

<Layout 
	title={post.title} 
	description={post.summary} 
	image={post.image_url}
	articleDate={post.created_at}
>
	<article class="post-article">
		<header class="post-header">
			<span class="category">{post.category || '인사이트'}</span>
			<h1>{post.title}</h1>
			<div class="post-meta">
				<time>{displayDate}</time>
			</div>
		</header>

		<div class="prose" set:html={htmlContent}>
		</div>
	</article>
</Layout>

<style>
	.post-article {
		max-width: 700px;
		margin: 4rem auto;
	}
	.post-header {
		text-align: center;
		margin-bottom: 4rem;
	}
	.category {
		color: #2563eb;
		font-weight: 700;
		font-size: 0.9rem;
		background: #eff6ff;
		padding: 0.3rem 0.8rem;
		border-radius: 20px;
	}
	h1 {
		font-size: 2.5rem;
		margin: 1.5rem 0;
		line-height: 1.3;
		font-weight: 800;
		letter-spacing: -1px;
		word-break: keep-all;
	}
	.post-meta {
		color: #9ca3af;
		font-size: 0.95rem;
	}

	.prose {
		font-size: 1.15rem;
		line-height: 1.9;
		color: #374151;
	}
	.prose :global(img) {
		width: 100%;
		border-radius: 1rem;
		margin: 2.5rem 0;
	}
	.prose :global(h2) {
		font-size: 1.8rem;
		margin-top: 4rem;
		margin-bottom: 1.2rem;
		color: #111827;
		font-weight: 800;
	}
	.prose :global(strong) {
		font-weight: 700;
		color: #111827;
		box-shadow: inset 0 -10px 0 #dbeafe;
	}
</style>
