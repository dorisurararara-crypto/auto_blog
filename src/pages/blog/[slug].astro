---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';
import { marked } from 'marked';

const { slug } = Astro.params;
const db = Astro.locals.runtime.env.DB;

// DB에서 해당 슬러그의 글 가져오기
const post = await db.prepare("SELECT * FROM posts WHERE slug = ?").bind(slug).first();

if (!post) {
	return Astro.redirect('/404');
}

const htmlContent = marked.parse(post.content);
const displayDate = post.created_at ? post.created_at.split(' ')[0].replace(/-/g, '. ') : '';
---

<Layout 
	title={post.title} 
	description={post.summary} 
	image={post.image_url}
	articleDate={post.created_at}
>
	<article class="post-article">
		<header class="post-header">
			<span class="category">{post.category || '인사이트'}</span>
			<h1>{post.title}</h1>
			<div class="post-meta">
				<time>{displayDate}</time>
			</div>
		</header>

		{post.image_url && (
			<div class="post-thumbnail">
				<img src={post.image_url} alt={`${post.title} - ${post.category || '인사이트'} 비교 분석`} loading="eager" />
			</div>
		)}

		<div class="prose" set:html={htmlContent}>
		</div>
	</article>
</Layout>

<style>
	.post-article {
		max-width: 720px;
		margin: 2rem auto;
		padding: 0 1.25rem;
	}
	.post-header {
		text-align: center;
		margin-bottom: 3rem;
	}
	.category {
		color: #2563eb;
		font-weight: 800;
		font-size: 0.85rem;
		background: #eff6ff;
		padding: 0.2rem 0.7rem;
		border-radius: 6px;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}
	h1 {
		font-size: 2rem;
		margin: 1.25rem 0;
		line-height: 1.35;
		font-weight: 900;
		letter-spacing: -1.2px;
		word-break: keep-all;
		color: #111827;
	}
	@media (min-width: 640px) {
		h1 { font-size: 2.8rem; }
		.post-article { margin: 4rem auto; }
	}
	.post-meta {
		color: #94a3b8;
		font-size: 0.95rem;
		font-weight: 500;
	}
	.post-thumbnail {
		margin-bottom: 2.5rem;
		border-radius: 12px;
		overflow: hidden;
	}
	.post-thumbnail img {
		width: 100%;
		height: auto;
		display: block;
	}

	.prose {
		font-size: 1.15rem;
		line-height: 1.8;
		color: #334155;
	}
	.prose :global(img) {
		width: calc(100% + 2.5rem);
		margin-left: -1.25rem;
		border-radius: 0;
		margin-top: 2rem;
		margin-bottom: 2rem;
	}
	@media (min-width: 640px) {
		.prose :global(img) {
			width: 100%;
			margin-left: 0;
			border-radius: 1rem;
		}
	}
	.prose :global(h2) {
		font-size: 1.6rem;
		margin-top: 3.5rem;
		margin-bottom: 1.2rem;
		color: #111827;
		font-weight: 850;
		letter-spacing: -0.8px;
	}
	.prose :global(p) {
		margin-bottom: 1.75rem;
	}
	.prose :global(strong) {
		font-weight: 800;
		color: #111827;
		box-shadow: inset 0 -8px 0 #dbeafe;
	}
	.prose :global(ul) {
		padding-left: 1.2rem;
		margin-bottom: 2rem;
	}
	.prose :global(li) {
		margin-bottom: 0.75rem;
	}
</style>
